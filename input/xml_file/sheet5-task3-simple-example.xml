<?xml version="1.0" encoding="UTF-8"?>
<MolSim>
    <simulation_parameters>
        <end_time>100</end_time>
        <delta_time>0.0005</delta_time>
        <output_basename>../output</output_basename>
        <write_frequency>10</write_frequency>
        <r_cutoff_radius>3</r_cutoff_radius>
        <gravity>-12.44</gravity>
        <enable_brownian>false</enable_brownian>
        <domain_size>
            <x>9</x>
            <y>15</y>
            <z>9</z>
            <lower-left-corner>
                <x>0.0</x>
                <y>0.0</y>
                <z>0.0</z>
            </lower-left-corner>
        </domain_size>
    </simulation_parameters>

    <thermostats>
        <initial_temp>40</initial_temp>
        <target_temp>40</target_temp>
        <delta_temp>0.0005</delta_temp>
        <is_gradual>true</is_gradual>
        <n_thermostats>1000</n_thermostats>
    </thermostats>
    <boundary_conditions>
        <left>Periodic</left>
        <right>Periodic</right>
        <top>Reflecting</top>
        <bottom>Reflecting</bottom>
        <front>Periodic</front>
        <back>Periodic</back>
    </boundary_conditions>

    <cuboids>
        <cuboid>
            <coordinate>
                <x>0.5</x>
                <y>3.5</y>
                <z>0.5</z>
            </coordinate>
            <dimensions>
                <x>9</x>
                <y>5</y>
                <z>9</z>
            </dimensions>
            <mesh_width>1</mesh_width>
            <mass>1.0</mass>
            <epsilon>1.0</epsilon>
            <sigma>1.2</sigma>
            <initial_velocity>
                <x>0.0</x>
                <y>0.0</y>
                <z>0.0</z>
            </initial_velocity>
        </cuboid>

