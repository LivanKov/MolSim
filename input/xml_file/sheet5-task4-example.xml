<?xml version="1.0" encoding="UTF-8"?>
<MolSim>
    <simulation_parameters>
        <end_time>50</end_time>
        <delta_time>0.0005</delta_time>
        <output_basename>../output</output_basename>
        <write_frequency>10</write_frequency>
        <r_cutoff_radius>2.75</r_cutoff_radius>
        <gravity>-0.8</gravity>
        <enable_brownian>false</enable_brownian>
        <domain_size>
            <x>30</x>
            <y>30</y>
            <z>12</z>
            <lower-left-corner>
                <x>0.0</x>
                <y>0.0</y>
                <z>0.0</z>
            </lower-left-corner>
        </domain_size>
    </simulation_parameters>

    <thermostats>
        <initial_temp>40</initial_temp>
        <target_temp>40</target_temp>
        <delta_temp>0.0005</delta_temp>
        <is_gradual>true</is_gradual>
        <n_thermostats>10</n_thermostats>
    </thermostats>
    <boundary_conditions>
        <left>Outflow</left>
        <right>Outflow</right>
        <top>Periodic</top>
        <bottom>Periodic</bottom>
        <front>Periodic</front>
        <back>Periodic</back>
    </boundary_conditions>

    <cuboids>

        <cuboid>
            <coordinate>
                <x>1.0</x>
                <y>0.5</y>
                <z>0.5</z>
            </coordinate>
            <dimensions>
                <x>2</x>
                <y>30</y>
                <z>12</z>
            </dimensions>
            <mesh_width>1.0</mesh_width>
            <mass>1.0</mass>
            <epsilon>2.0</epsilon>
            <sigma>1.1</sigma>
            <fixed>true</fixed>
            <initial_velocity>
                <x>0.0</x>
                <y>0.0</y>
                <z>0.0</z>
            </initial_velocity>
        </cuboid>

        <cuboid>
            <coordinate>
                <x>27.2</x>
                <y>0.5</y>
                <z>0.5</z>
            </coordinate>
            <dimensions>
                <x>2</x>
                <y>30</y>
                <z>12</z>
            </dimensions>
            <mesh_width>1.0</mesh_width>
            <mass>1.0</mass>
            <epsilon>2.0</epsilon>
            <sigma>1.1</sigma>
            <fixed>true</fixed>
            <initial_velocity>
                <x>0.0</x>
                <y>0.0</y>
                <z>0.0</z>
            </initial_velocity>
        </cuboid>

        <cuboid>
            <coordinate>
                <x>3.2</x>
                <y>0.6</y>
                <z>0.6</z>
            </coordinate>
            <dimensions>
                <x>20</x>
                <y>25</y>
                <z>10</z>
            </dimensions>
            <mesh_width>1.2</mesh_width>
            <mass>1.0</mass>
            <epsilon>1.0</epsilon>
            <sigma>1.0</sigma>
            <initial_velocity>
                <x>0.0</x>
                <y>0.0</y>
                <z>0.0</z>
            </initial_velocity>
        </cuboid>

    </cuboids>
</MolSim>
